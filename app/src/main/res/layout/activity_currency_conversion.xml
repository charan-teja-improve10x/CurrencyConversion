<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrencyConversionActivity">

    <Spinner
        android:id="@+id/from_sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/currency_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Enter Currency"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/from_sp"
        app:layout_constraintStart_toStartOf="@+id/from_sp"
        app:layout_constraintTop_toBottomOf="@+id/from_sp" />

    <Spinner
        android:id="@+id/to_sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/currency_txt"
        app:layout_constraintStart_toStartOf="@+id/currency_txt"
        app:layout_constraintTop_toBottomOf="@+id/currency_txt" />

    <EditText
        android:id="@+id/currency_conversion_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Converted Currency"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/to_sp"
        app:layout_constraintStart_toStartOf="@+id/to_sp"
        app:layout_constraintTop_toBottomOf="@+id/to_sp" />

    <Button
        android:id="@+id/convert_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:backgroundTint="#00ACC1"
        android:text="Convert"
        app:layout_constraintEnd_toEndOf="@+id/currency_conversion_txt"
        app:layout_constraintStart_toStartOf="@+id/currency_conversion_txt"
        app:layout_constraintTop_toBottomOf="@+id/currency_conversion_txt" />
</androidx.constraintlayout.widget.ConstraintLayout>